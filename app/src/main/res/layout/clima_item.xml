<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/recCard_item_CLIMA"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:backgroundTint="#FF86ADCD"
        app:cardCornerRadius="15dp"
        app:cardElevation="7dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="2dp"
            android:paddingTop="18dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/recnombre_CiudadClima"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comfortaa"
                    android:paddingLeft="20dp"
                    android:text="Lima"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/recClima_Temp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:padding="6dp"
                    android:paddingEnd="30dp"
                    android:fontFamily="@font/comfortaa"
                    android:text="12.5k"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="2dp"
                android:textAlignment="center">

                <TextView
                    android:id="@+id/recClima_Min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:paddingLeft="20dp"
                    android:text="Min: 12k"
                    android:fontFamily="@font/comfortaa"

                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/recClima_Max"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:text="Max: 13k"
                    android:fontFamily="@font/comfortaa"

                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/recClima_Viento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:text="Viento: Oeste"
                    android:fontFamily="@font/comfortaa"
                    android:textSize="18dp" />

            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>
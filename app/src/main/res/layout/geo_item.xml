<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/recCard_item_Geo"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:backgroundTint="#FF86ADCD"
        app:cardCornerRadius="15dp"
        app:cardElevation="7dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingTop="18dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/recnombre_Ciudad"
                    android:layout_width="286dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comfortaa"

                    android:text="Lima"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/recnombre_Ciudadicon"
                    android:layout_width="31dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/comfortaa"

                    android:text="Lima"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    app:srcCompat="@android:drawable/ic_menu_mapmode" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="2dp"
                android:textAlignment="center">

                <TextView
                    android:id="@+id/recGEO_lat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:fontFamily="@font/comfortaa"
                    android:text="Lat: -23.25"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/recGEO_long"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comfortaa"
                    android:text="Lon: -18.12"
                    android:textSize="16dp" />
            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>